<main>
  <div class="container py-4">
    <header class="pb-3 mb-4 border-bottom">
      <a href="/" class="d-flex align-items-center text-dark text-decoration-none">
        <%= image_tag('logo.png', size: '40') %>
        <span class="fs-4">Planilhas</span>
      </a>
    </header>
    <div class="p-5 mb-4 bg-light rounded-3">
      <div class="container-fluid py-5">
        <h1 class="display-5 fw-bold">Sistema gerador de planilhas VIP635, MCI460</h1>
        <p class="col-md-8 fs-4">Selecione um dos layouts abaixo e informe o ID da planilha</p>
      </div>
    </div>
    <div class="row align-items-md-stretch">
      <div class="col-md-12">
        <div class="h-100 p-5 bg-light border rounded-3">
          <%= flash_messages %>
          <%= form_with url: spreadsheet_creator_path do |f| %>
            <div class="form-group">
              <%= f.label :layout, 'Layout' %>
              <%= f.select :layout, [["MCI 460", "mci460"]], {include_blank: "Selecione o layout"}, class: 'form-select', required: true %>
            </div>
            <div class="form-group">
              <%= f.label :sequencial, 'Sequencial da remessa' %>
              <%= f.number_field :sequencial, class: 'form-control', required: true %>
              <div id="" class="form-text">Número sequencial da remessa</div>
            </div>
            <div class="form-group">
              <%= f.label :spreadsheet_id, 'ID da planilha' %>
              <%= f.text_field :spreadsheet_id, class: 'form-control', required: true %>
              <div id="" class="form-text">ID da planilha pública do Google Spreadsheet Ex: https://docs.google.com/spreadsheets/d/<b>1_Mod7Wz4D5l2ltOrJkMZjCfvjOfGmfP41yGFUpUnP441</b></div>
            </div>
            <div class="form-group">
              <%= f.label :file_name, 'Nome do arquivo' %>
              <%= f.text_field :file_name, class: 'form-control', required: true %>
              <div id="" class="form-text">Nome do arquivo que será enviado</div>
            </div>
            <div class="form-group mt-3">
              <%= f.submit 'Enviar', class: 'btn btn-primary', data: { disable_with: "Aguarde..."} %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    <footer class="pt-3 mt-4 text-muted border-top">
      &copy; <%= Date.current.year %>
    </footer>
  </div>
</main>
