<%= form_with url: spreadsheet_creator_path do |f| %>
  <div class="form-group">
    <%= f.label :layout, 'Layout' %>
    <%= f.select :layout, [["MCI460 - Contas Bancárias BB", "mci460"], ["VIPF635 - Cartão PNAE", "vip635"]], {include_blank: "Selecione o layout"}, class: 'form-select', required: true %>
  </div>
  <div class="form-group">
    <%= f.label :sequencial, 'Sequencial da remessa' %>
    <%= f.number_field :sequencial, class: 'form-control', required: true %>
    <div id="" class="form-text">Número sequencial da remessa</div>
  </div>
  <div class="form-group">
    <%= f.label :spreadsheet_id, 'ID da planilha' %>
    <%= f.text_field :spreadsheet_id, class: 'form-control', required: true %>
    <div id="" class="form-text">ID da planilha pública do Google Spreadsheet Ex: https://docs.google.com/spreadsheets/d/<b>1_Mod7Wz4D5l2ltOrJkMZjCfvjOfGmfP41yGFUpUnP441</b></div>
  </div>
  <div class="form-group">
    <%= f.label :file_name, 'Nome do arquivo' %>
    <%= f.text_field :file_name, class: 'form-control', required: true %>
    <div id="" class="form-text">Nome do arquivo que será enviado</div>
  </div>
  <div class="form-group mt-3">
    <%= f.submit 'Enviar', class: 'btn btn-primary', data: { disable_with: "Aguarde..."} %>
  </div>
<% end %>
